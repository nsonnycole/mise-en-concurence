{% extends 'FlairPrestataireBundle::propositions.html.twig' %}

{% block body %}
<div class="container">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Questions/Réponses
          </h1>
          <ol class="breadcrumb">
              <li><a href="{{url('Homepage')}}">Accueil</a></li>
              <li>Liste des questions</li>

              <div class="btn-bar" style="float:right">
                  <a onClick="window.history.go(-1);">
                  <i class="fa fa-undo"></i>
                      Retour
                  </a>
                  <div class="corner"></div>
              </div>
          </ol>
      </div>
  </div>


        {% include 'FlairOrganismeBundle:Consultations:partials/summary.html.twig' with {'consultation' : question.reponse.consultation } %}

        <h2 class="title grey">{{ question.titre }}</h2>
        <p>
            {{ question.question | raw }}
        </p>

        <div class="right-align">
            <span><i>le {{ question.dateQuestion | date('d-m-Y') }}</i></span>
        </div>

        <h2 class="title grey" style="margin-top: 40px;">Réponse</h2>
        {% if question.reponseOrganisme == "" %}
            <p>En attente de réponse...</p>
        {% else %}
            {{ question.reponseOrganisme | raw }}

            <div class="right-align">
                <span><i>le {{ question.dateQuestion | date('d-m-Y') }}</i></span>
            </div>
        {% endif %}
    </div>


{% endblock %}
