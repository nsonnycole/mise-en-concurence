{% extends '::base.html.twig' %}

{% block body %}

<!-- Page Content -->
<div class="container">
  <div class="row">
      <div class="col-lg-12">
          <h1 class="page-header">Connexion
          </h1>
          <ol class="breadcrumb">
              <li><a href="{{ url('Homepage') }}">Accueil</a>
              </li>
              <li class="active">Connexion</li>
          </ol>
      </div>
  </div>
  <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
    <div class="panel panel-info" >
      <div class="panel-heading">
        <div class="panel-title">Connexion</div>
        <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="{{ url('flair_user_password_forget') }}">Mot de passe oubli√© ?</a></div>
      </div>

      <div style="padding-top:30px" class="panel-body" >
      {% if error is defined and error is not null %}
          <div class="alert alert-danger col-sm-12">
              <p>Le nom d'utilisateur et le mot de passe ne correspondent pas</p>
          </div>
      {% endif %}


        <form class="form-horizontal" id="login-form" action="{{ url('login_check') }}" method="post">

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="fa fa-user"></i></span>
            <input id="login-username" type="text" class="form-control" name="_username" value="{{ last_username }}" placeholder="Email" required>
          </div>

          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
            <input id="password" type="password" class="form-control" name="_password" placeholder="Mot de passe" required>
          </div>



          <div class="input-group">
            <div class="checkbox">
              <label>
                <input id="remember_me" type="checkbox" name="_remember_me" value="on"> Se souvenir de moi

              </label>
            </div>
          </div>


          <div style="margin-top:10px" class="form-group">
            <!-- Button -->

            <div  style="float:right">
              <button id="btn-login" href="#" type="submit"  name="_submit" class="btn btn-warning">Connexion  </button>

            </div>
          </div>


          <div class="form-group">
            <div class="col-md-12 control">
              <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%" >
                Nouveau ?
                <a href="{{ url('flair_user_inscription_organisme') }}">
                  S'inscrire
                </a>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
{% endblock %}
